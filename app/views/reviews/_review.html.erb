<li id="review-<%= review.id %>">
  <span class="user"><%= link_to review.user.name, review.user %></span>
  <span class="content"><%= review.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(review.created_at) %> ago.
  </span>
  <% @comments = review.comments %>
  <span id="chat">
    <%= render @comments %>
  </span>

  <%= form_for Comment.new , remote: true do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
      <%= f.hidden_field :review_id, value: review_id.id %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.text_field :content, placeholder: "Your's comments..." %>
  <% end %>
</li>
