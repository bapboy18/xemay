<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
        <div id="user_avatar" class="avatar">
          <% unless @image.nil? %>
            <%= image_tag @image.image.url(:thumb), width: 100, heigh: 100 %>
          <% end %>
        </div>
      </h1>
    </section>
    <% if current_user?(@user) %>
      <section>
        <%= link_to "Create review", new_review_path %>
      </section>
    <% end %>
  </aside>

  <div class="col-md-8">
    <% if @user.reviews.any? %>
      <h3>reviews (<%= @user.reviews.count %>)</h3>
      <ol class="reviews">
        <%= render @reviews %>
      </ol>
    <% end %>
  </div>
</div>

